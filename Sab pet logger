local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "AboodHub"
screenGui.ResetOnSpawn = false

-- Toggle Button
local toggleBtn = Instance.new("TextButton", screenGui)
toggleBtn.Size = UDim2.new(0, 40, 0, 40)
toggleBtn.Position = UDim2.new(0, 10, 0, 10)
toggleBtn.Text = "â‰¡"
toggleBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.BorderSizePixel = 0
Instance.new("UICorner", toggleBtn)

-- Main Frame
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 500, 0, 350)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -175)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.Visible = true
Instance.new("UICorner", mainFrame)

-- Sidebar
local sidebar = Instance.new("Frame", mainFrame)
sidebar.Size = UDim2.new(0, 130, 1, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
sidebar.BorderSizePixel = 0
Instance.new("UICorner", sidebar)

-- Tab Button Creator
local function createTabButton(name, yPos)
	local btn = Instance.new("TextButton", sidebar)
	btn.Size = UDim2.new(1, -10, 0, 40)
	btn.Position = UDim2.new(0, 5, 0, yPos)
	btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
	btn.Text = name
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.TextScaled = true
	Instance.new("UICorner", btn)
	return btn
end

-- Page Creator
local function createPage(name)
	local page = Instance.new("Frame", mainFrame)
	page.Name = name
	page.Position = UDim2.new(0, 130, 0, 0)
	page.Size = UDim2.new(1, -130, 1, 0)
	page.Visible = false
	page.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
	Instance.new("UICorner", page)
	return page
end

-- Pages
local pages = {
	Main = createPage("MainPage"),
	Player = createPage("PlayerPage"),
	Stealer = createPage("StealerPage"),
	Live = createPage("LivePage")
}

-- Tab Buttons
local mainTab = createTabButton("Main", 10)
local playerTab = createTabButton("Player", 60)
local stealerTab = createTabButton("Stealer", 110)
local liveTab = createTabButton("Live", 160)

-- Tab Functionality
local function showPage(name)
	for _, page in pairs(pages) do
		page.Visible = false
	end
	if pages[name] then
		pages[name].Visible = true
	end
end

mainTab.MouseButton1Click:Connect(function() showPage("Main") end)
playerTab.MouseButton1Click:Connect(function() showPage("Player") end)
stealerTab.MouseButton1Click:Connect(function() showPage("Stealer") end)
liveTab.MouseButton1Click:Connect(function() showPage("Live") end)
showPage("Main") -- default page

-- Toggle Logic
toggleBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = not mainFrame.Visible
end)

-- Live Page Content
local liveLabel = Instance.new("TextLabel", pages.Live)
liveLabel.Size = UDim2.new(1, -20, 0, 50)
liveLabel.Position = UDim2.new(0, 10, 0, 10)
liveLabel.BackgroundTransparency = 0.25
liveLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
liveLabel.TextColor3 = Color3.new(1, 1, 1)
liveLabel.TextScaled = true
liveLabel.Text = "ðŸ“¡ Live updates will appear here"
Instance.new("UICorner", liveLabel)

loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/YOURKEY.lua"))()
