local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- Clean up existing UI
local existing = player:WaitForChild("PlayerGui"):FindFirstChild("AboodHub")
if existing then existing:Destroy() end

-- Screen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AboodHub"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 500, 0, 300)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BackgroundTransparency = 0.3
mainFrame.BorderSizePixel = 0
mainFrame.Name = "MainFrame"
mainFrame.Parent = screenGui
mainFrame.Active = true
mainFrame.Draggable = true

-- UICorner for round edges
local frameCorner = Instance.new("UICorner", mainFrame)
frameCorner.CornerRadius = UDim.new(0, 12)

-- Title
local title = Instance.new("TextLabel", mainFrame)
title.Size = UDim2.new(0, 300, 0, 40)
title.Position = UDim2.new(0, 20, 0, 10)
title.Text = "ABOOD\nHUB"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.BackgroundTransparency = 1
title.TextYAlignment = Enum.TextYAlignment.Top

-- Top-right icon (static image)
local icon = Instance.new("ImageLabel", mainFrame)
icon.Size = UDim2.new(0, 60, 0, 60)
icon.Position = UDim2.new(1, -70, 0, 10)
icon.BackgroundTransparency = 1
icon.Image = "rbxassetid://137401639328935" -- Your custom icon

-- Vertical tab buttons
local tabs = {"Main", "Player", "ESP", "Settings"}
local buttonY = 70
for _, name in ipairs(tabs) do
    local button = Instance.new("TextButton", mainFrame)
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = UDim2.new(0, 20, 0, buttonY)
    button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    button.Text = name
    button.TextScaled = true
    button.Font = Enum.Font.Gotham
    button.TextColor3 = Color3.fromRGB(255, 255, 255)

    local corner = Instance.new("UICorner", button)
    corner.CornerRadius = UDim.new(0, 10)

    buttonY = buttonY + 60
end

-- Toggle Button (Open/Close) with your icon
local toggleButton = Instance.new("ImageButton")
toggleButton.Name = "ToggleButton"
toggleButton.Size = UDim2.new(0, 60, 0, 60)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.BackgroundTransparency = 1
toggleButton.Image = "rbxassetid://137401639328935"
toggleButton.Parent = screenGui

-- Open/Close toggle logic
local isOpen = true
toggleButton.MouseButton1Click:Connect(function()
    isOpen = not isOpen
    mainFrame.Visible = isOpen
end)
